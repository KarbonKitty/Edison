<div class="generator">
    <h2 style="float: left">@Generator.Name (@Generator.NumberBuilt)</h2>
    <h2 style="float: right">Price: @DisplayHelpers.DisplayPrice(Generator.CurrentPrice)</h2>
    <div style="clear: both"></div>
    <p>Production: @Generator.CurrentProduction $ / s</p>
    <div class="btn" @onclick="BuyGenerator">Buy</div>
</div>

@code {
    [Inject] protected GameEngine engine { get; set; }

    [Parameter]
    public PowerGenerator Generator { get; set; }

    private void BuyGenerator()
    {
        engine.TryBuy(Generator);
    }
}
